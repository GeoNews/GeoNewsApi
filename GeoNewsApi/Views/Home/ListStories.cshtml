@model IEnumerable<GeoNewsApi.Database.NewsItem>

@{
    ViewBag.Title = "ListStories";
}

<h2>Story List</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NewsItemDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HeadLine)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NewsItemDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HeadLine)
        </td>
        <td>
            @*@Html.ActionLink("Edit", "Edit", new { id=item.NewsItemId }) |
            @Html.ActionLink("Details", "Details", new { id=item.NewsItemId }) |*@
            @Html.ActionLink("Add Location", "LinkToLocation", new { id = item.NewsItemId }) | 
            @Html.ActionLink("New Location", "NewLocation", new { StoryId = item.NewsItemId })
        </td>
    </tr>
}

</table>
